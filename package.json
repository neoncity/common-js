{
  "name": "@neoncity/common-js",
  "version": "0.0.3",
  "description": "Things shared between packages. Isomorphic, of course.",
  "author": "NeonCity team",
  "scripts": {
    "build": "webpack",
    "pretest": "webpack",
    "test": "mocha lib/tests.js",
    "test-with-coverage": "webpack && istanbul cover --config ./.istanbul.yml ./node_modules/mocha/bin/_mocha -- lib/tests.js && remap-istanbul -i ./lib/coverage/coverage-final.json -o ./lib/coverage/coverage-remapped.json && coverage-filter -i ./lib/coverage/coverage-remapped.json -o ./lib/coverage/coverage-filtered.json",
    "push-coverage-to-codecov": "codecov -f ./lib/coverage/coverage-filtered.json"
  },
  "keywords": [
    "common"
  ],
  "respository": {
    "type": "git",
    "url": "git+https://github.com/neoncity/common-js.git"
  },
  "private": true,
  "homepage": "https://github.com/neoncity/common-js#readme",
  "main": "./lib/index.js",
  "types": "./lib/src/index.d.ts",
  "files": [
    "lib",
    "src",
    "tsconfig.json",
    "webpack.config.js"
  ],
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@neoncity/coverage-filter": "^0.0.4",
    "@neoncity/togemfury": "^0.0.2",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.38",
    "@types/node": "^7.0.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "remap-istanbul": "^0.8.4",
    "ts-loader": "^1.3.3",
    "typescript": "^2.1.5",
    "webpack": "^1.14.0",
    "webpack-fail-plugin": "^1.0.5"
  }
}
